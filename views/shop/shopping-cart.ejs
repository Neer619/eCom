<% if(products){ %> 
 <div class="flex flex-col mx-auto justify-center w-9/12 bg-gray-400 my-3">

    <% for(var prod of products) { %> 
        <div class="container p-2 flex flex-row mx-auto w-full my-0 border-dotted border-b-2 justify-between border-gray-500 bg-gray-200">
                <img src="<%=prod.item.imagePath %> " alt="" class="w-2/12">
                <div class=" px-2 w-9/12">
                    <div class="font-semibold text-xl">
                        <%=prod.item.title %>
                    </div>
                    <div class="px-1">
                        <%=prod.item.description %>
                    </div>
                </div>
                <div class="px-2 w-1/12 ">
                    <div class="font-medium">
                        Qty : <%=prod.qty %>
                    </div>
                    <div class="font-bold bottom-0">
                        $ <%=prod.price %>
                    </div>

                </div>

                <hr>   

        </div>
    <% } %> 
        
    <div class="container mx-auto p-2 w-full bg-gray-400 mt-0 relative">
        <div class="font-bold uppercase text-gray-10 text-xl w-full border-b border-black border-dotted">
            price details
        </div>
        <div class="flex justify-between">
            <div class="font-bold">
                Total Quantity
            </div>
            <div class="font-bold ">
                <%=totalQty %> 
            </div>

        </div>

        <div class="flex justify-between">
            <div class="font-bold ">
                Total Price
            </div>
            <div class="font-bold ">
                $ <%=totalPrice %> 
            </div>

        </div>

        <a href="/checkout">
            <button class="rounded-bl rounded-tr-xl bg-red-10 px-3 py-2 uppercase font-semibold text-gray-400 hover:shadow-lg ">place order</button>
        </a>


    </div>
    

    <hr class ="w-10/12 mx-auto">
   

</div>

<hr class="border-gray-600 w-10/12 mx-auto">


<% }else{ %>



    <div class="flex flex-col mx-auto justify-center w-9/12 bg-gray-400 my-3">
        <div class="font-bold text-2xl">No items in the cart</div>
    </div>

<% } %> 